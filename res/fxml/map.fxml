<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.swinburne.view.controller.MapController">
   <children>
      <AnchorPane fx:id="drawPane" minHeight="500.0" minWidth="500.0" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: white;">

</AnchorPane>
      <VBox maxWidth="1.7976931348623157E308">
         <children>
            <Button fx:id="reloadButton" mnemonicParsing="false" onAction="#reload" text="Reload" />
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Source" />
                  <Label text="Destination" GridPane.rowIndex="1" />
                  <ComboBox fx:id="sourceNodeComboBox" prefWidth="150.0" GridPane.columnIndex="1" />
                  <ComboBox fx:id="destinationNodeComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <TextArea fx:id="outputTextArea" editable="false" maxWidth="1.7976931348623157E308">
               <font>
                  <Font name="Consolas" size="12.0" />
               </font>
            </TextArea>
            <Button fx:id="calculateButton" mnemonicParsing="false" onAction="#calculateAction" text="Calculate" />
         </children>
      </VBox>
   </children>
</HBox>
